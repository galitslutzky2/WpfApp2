<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" >
    <Grid Background="Aqua">
        <Grid.RowDefinitions>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <UniformGrid Grid.Row="0" x:Name="grid1" Columns="20" Rows="20" Margin="20,20,20,20" />
        <!--<Button Grid.Row="1" HorizontalAlignment="Center" Click="Next" Content="next"/>-->
        <Button x:Name="btnPlay" Grid.Row="1" HorizontalAlignment="Center" Click="StartPlay" Content="Start Run"/>

    </Grid>
</Window>
